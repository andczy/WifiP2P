<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/notify_parent"
    >
     <ImageView android:id="@+id/notify_icon"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/ic_launcher"
         android:layout_centerVertical="true"
         android:layout_marginLeft="6dp"
         style="@android:style/TextAppearance.StatusBar.Icon"
         />
	<TextView android:id="@+id/notify_percent"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="12sp"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="20dp"
	    android:layout_centerVertical="true"
	    style="@android:style/TextAppearance.StatusBar.EventContent"
	    />
	<TextView android:id="@+id/notify_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新下载中..."
        android:textSize="12sp"
        android:layout_toRightOf="@id/notify_icon"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="12dp"
        style="@android:style/TextAppearance.StatusBar.EventContent.Title"
        />
    <ProgressBar android:id="@+id/notify_progress"
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:max="100"
        android:layout_toRightOf="@id/notify_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/notify_text"
        android:layout_marginTop="6dp"
        android:layout_toLeftOf="@id/notify_percent"
        android:layout_marginRight="6dp"
        style="@android:style/Widget.ProgressBar.Horizontal"/>
   
</RelativeLayout>